{
  "name": "google-cloud-translation-playground-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "gts lint",
    "fix": "gts fix",
    "clean": "gts clean",
    "compile": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" -r dotenv-expand/config src/index.ts",
    "up:firestore": "docker compose up -d firestore_emulator --wait",
    "up:gcs": "docker compose up -d gcs_emulator --wait",
    "prepare": "npm run compile",
    "prestart": "npm run up:firestore && npm run up:gcs"
  },
