  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/express-fileupload": "^1.4.1",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "gts": "^3.1.1",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.4.2",
    "@google-cloud/storage": "^6.9.0",
    "celebrate": "^15.0.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "http-status-codes": "^2.2.0"
  }
